<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="Calculator" Height="500" Width="300">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBlock x:Name="ResultTextBlock" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
				   Text="0" FontSize="48" TextAlignment="Right" VerticalAlignment="Bottom" Margin="5"/>

		<Button x:Name="ButtonClear" Grid.Row="1" Grid.Column="0" Content="C" FontSize="24" Margin="5" Click="ClearButton_Click"/>
		<Button Grid.Row="1" Grid.Column="1" Content="+/-" FontSize="24" Margin="5"/>
		<Button Grid.Row="1" Grid.Column="2" Content="%" FontSize="24" Margin="5"/>
		<Button x:Name="ButtonDivide" Grid.Row="1" Grid.Column="3" Content="/" FontSize="24" Margin="5" Click="OperatorButton_Click"/>

		<Button x:Name="Button7" Grid.Row="2" Grid.Column="0" Content="7" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="Button8" Grid.Row="2" Grid.Column="1" Content="8" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="Button9" Grid.Row="2" Grid.Column="2" Content="9" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="ButtonMultiply" Grid.Row="2" Grid.Column="3" Content="*" FontSize="24" Margin="5" Click="OperatorButton_Click"/>

		<Button x:Name="Button4" Grid.Row="3" Grid.Column="0" Content="4" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="Button5" Grid.Row="3" Grid.Column="1" Content="5" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="Button6" Grid.Row="3" Grid.Column="2" Content="6" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="ButtonSubtract" Grid.Row="3" Grid.Column="3" Content="-" FontSize="24" Margin="5" Click="OperatorButton_Click"/>

		<Button x:Name="Button1" Grid.Row="4" Grid.Column="0" Content="1" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="Button2" Grid.Row="4" Grid.Column="1" Content="2" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="Button3" Grid.Row="4" Grid.Column="2" Content="3" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="ButtonAdd" Grid.Row="4" Grid.Column="3" Content="+" FontSize="24" Margin="5" Click="OperatorButton_Click"/>

		<Button x:Name="Button0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="0" FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button Grid.Row="5" Grid.Column="2" Content="." FontSize="24" Margin="5" Click="NumberButton_Click"/>
		<Button x:Name="ButtonEquals" Grid.Row="5" Grid.Column="3" Content="=" FontSize="24" Margin="5" Click="EqualsButton_Click"/>
	</Grid>
</Window>
